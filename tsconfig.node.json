{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/common/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "$common/*": [
        "./src/common/*"
      ],
      "$main/*": [
        "./src/main/*"
      ],
      "$preload/*": [
        "./src/preload/*"
      ],
      "$root/*": [
        "./"
      ],
    }
  }
}
